# Set default behavior to automatically normalize line endings
* text=auto

# Explicitly declare text files you want to always be normalized and converted
# to native line endings on checkout
*.html text
*.css text
*.js text
*.json text
*.md text
*.txt text
*.xml text
*.yml text
*.yaml text

# Declare files that will always have CRLF line endings on checkout
*.sln text eol=crlf

# Declare files that will always have LF line endings on checkout
*.sh text eol=lf
*.bat text eol=crlf

# Denote all files that are truly binary and should not be modified
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg binary
*.woff binary
*.woff2 binary
*.ttf binary
*.eot binary
*.pdf binary
*.zip binary
*.tar binary
*.gz binary
*.7z binary
*.exe binary
*.dll binary
*.pdb binary

# Force the following file types to have the correct line endings
*.css text eol=lf
*.scss text eol=lf
*.sass text eol=lf
*.less text eol=lf
*.js text eol=lf
*.ts text eol=lf
*.jsx text eol=lf
*.tsx text eol=lf
*.vue text eol=lf
*.html text eol=lf
*.htm text eol=lf
*.xml text eol=lf
*.json text eol=lf
*.md text eol=lf
*.txt text eol=lf
*.csv text eol=lf

# Node.js specific
package.json text eol=lf
package-lock.json text eol=lf
yarn.lock text eol=lf
.npmrc text eol=lf

# Configuration files
*.config text eol=lf
*.conf text eol=lf
*.ini text eol=lf
.env text eol=lf
.env.* text eol=lf

# Git specific files
.gitignore text eol=lf
.gitattributes text eol=lf

# Documentation
*.md text eol=lf
*.rst text eol=lf
*.txt text eol=lf
*.adoc text eol=lf

# Web assets that should be treated as binary
*.min.js binary
*.min.css binary
*.map binary

# Archives and compressed files
*.tar.gz binary
*.tgz binary
*.zip binary
*.rar binary
*.7z binary

# Database files
*.db binary
*.sqlite binary
*.sqlite3 binary

# Log files
*.log text eol=lf

# Temporary files
*.tmp binary
*.temp binary
*.swp binary
*.bak binary

# IDE and editor files
.vscode/settings.json text eol=lf
.idea/* text eol=lf

# OS specific files
.DS_Store binary
Thumbs.db binary
*.lnk binary

# Certificate files
*.pem binary
*.key binary
*.crt binary
*.cer binary
*.p12 binary
*.pfx binary

# Large files (if using Git LFS)
# *.pdf filter=lfs diff=lfs merge=lfs -text
# *.zip filter=lfs diff=lfs merge=lfs -text
# *.tar.gz filter=lfs diff=lfs merge=lfs -text